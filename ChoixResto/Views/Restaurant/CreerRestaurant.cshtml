                                                            data_val_verifcontact_parametre1 = "Telephone", data_val_verifcontact_parametre2 = "Email" })-->
        </div>
        <div>
            @Html.LabelFor(model => model.Email)
            <!-- Validation avec la classe AumoinsUnDesDeuxAttribute -->
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)

            <!-- Avec le javascript pour validation côté client (Validate et js) -->
