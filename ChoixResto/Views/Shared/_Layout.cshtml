<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @System.Web.Optimization.Styles.Render("~/Content/css")
    @System.Web.Optimization.Scripts.Render("~/")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ChoixResto", "Index", "Accueil", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Accueil<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Exemple", "IndexExemple", "AccueilTest")</li>
                            <li>@Html.ActionLink("Afficher index VM", "IndexVm", "AccueilTest")</li>
                            <li>@Html.ActionLink("Afficher DayOfWeek", "DayOfWeek", "AccueilTest")</li>
                            <li>@Html.ActionLink("Liste des restaurants", "IndexRestoVM", "AccueilTest")</li>
                            <li>@Html.ActionLink("Liste d'élément", "SelectList", "AccueilTest")</li>
                            <li>@Html.ActionLink("Formulaire", "Formulaire", "AccueilTest")</li>
                            <li>@Html.ActionLink("Helper Fortement Typée", "HelperFortementTypee", "AccueilTest")</li>
                            <li>@Html.ActionLink("Afficher du HTML", "AfficheHTML", "AccueilTest")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Restaurant<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Liste des restaurants", "Index", "Restaurant")</li>
                            <li>@Html.ActionLink("Créer un restaurant", "CreerRestaurant", "Restaurant")</li>
                            <li>@Html.ActionLink("Rechercher un restaurant v1", "RechercheSansAjax", "Restaurant")</li>
                            <li>@Html.ActionLink("Rechercher un restaurant v2", "Recherche", "Restaurant")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Se connecter", "Index", "Login")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>